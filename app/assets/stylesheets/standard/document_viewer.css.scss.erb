@import "mixins";

.document {
  padding-top: 10px;

  a.pencil1, a.pencil2, a.pencil3 {
    width: 25px;
    height: 25px;
    background: url(<%= asset_path 'pencil.png' %>) no-repeat 0 0;
  }

  a.pencil2 {
    background-position: 0 -30px;
  }

  a.pencil3 {
    background-position: 0 -60px;
  }

  .comment_area {
    border: 1px solid #e4e410;
    background-color: transparent;
    background-color: rgba(247, 254, 46, 0.5);  /* FF3+, Saf3+, Opera 10.10+, Chrome, IE9 */
            filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#7FF7FE2E,endColorstr=#7FF7FE2E); /* IE6â€“IE9 */
            zoom: 1;
  }

  .note_box {
    font-size: 12px;
    p {
      margin-bottom: 4px;
      &.author {
        color: #6c6f73;
        margin-bottom: 0;
      }
    }
    a {
      font-weight: bold;
      &.show_replies {
        border-left: 1px solid #ccd2d6;
        margin-left: 10px;
        padding-left: 10px;
      }
    }
  }

  .page {
    line-height: 19px;
    font-size: 13px;
  }

  p {
    font-size: 12px;
  }

  .buttons {
    clear: both;
    height: 26px;
    float: left;
    a {
      line-height: 26px;
      text-indent: 30px;
      display: block;
      height: 26px;
      background-repeat: repeat;
      background-position: left top;
      font-size: 12px;
      color: #6c6f73;
      text-decoration: none;
      float: left;
      text-shadow: 0px 1px 0px #ffffff;
      filter: dropshadow(color = white, offx = 0, offy = 1);

      &.selected {
        color: #FFF;
        text-shadow: 0px 1px 0px #70767c;
        filter: dropshadow(color = #70767c, offx = 0, offy = 1);
        background-position: center bottom;
      }
      &.add_note.selected {
        color: #FF0;
      }

      &.scan {
        background: url(<%= asset_path "dv-buttons.png" %>) 0 -78px;
        width: 70px;
        &:hover {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 -104px;
        }
        &.selected {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 0;
        }
      }
      &.fulltext {
        background: url(<%= asset_path "dv-buttons.png" %>) 0 -26px;
        width: 80px;
        margin-right: 20px;
        &:hover {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 -52px;
        }
        &.selected {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 -130px;
        }
      }
      &.add_note {
        background: url(<%= asset_path "dv-buttons.png" %>) 0 -156px;
        width: 117px;
        text-indent: 0px;
        text-align: center;
        &:hover {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 -208px;
        }
        &.selected {
          background: url(<%= asset_path "dv-buttons.png" %>) 0 -182px;
        }
      }
    }

    .instructions {
      float: left;
      padding-top: 6px;
      padding-left: 15px;
      display: none;
    }
  }

  .pages {
    float: right;
    margin-bottom: 10px;
    padding-right: 37px;

    span {
      font-weight: normal;
    }

    a, input, span {
      line-height: 26px;
      background-repeat: repeat;
      background-position: left top;
      display: block;
      height: 26px;
      margin-right: 7px;
      float: left;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 12px;
      font-weight: bold;
      color: #6c6f73;
      text-align: center;
      padding: 0px;
    }
    a {
      text-indent: -10000px;
      width: 30px;
      &.up {
        background-image: url(<%= asset_path "up.png" %>);
        &:hover {
          background: url(<%= asset_path "up.png" %>) scroll 0 26px;
        }
      }
      &.down {
        background-image: url(<%= asset_path "down.png" %>);
        &:hover {
          background: url(<%= asset_path "down.png" %>) scroll 0 26px;
        }
      }
    }

    input {
      @include shaded-input;
      width: 23px;
    }
  }

  .doc {
    border: 1px solid #eef2f6;
    clear: both;
    margin-bottom: 10px;
    position: relative;
    width: 673px;
  }
}
