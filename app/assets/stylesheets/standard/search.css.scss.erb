@import "mixins";

body.detail {
  #search_panel {
    background: transparent;
    text-align: left;
    display: inline-block;
    float: left;
    position: relative;
    .x {
      position: absolute;
      top: 27px;
      left: 375px;
    }
  }
  #tabs {
    float: right;
    margin: 32px 0 0 0;
    position: relative;
    z-index: 9;
    li {
      @include box-shadow(0, -2px, 2px, #ccc);
      &.active {
        background: url(<%= asset_path 'tab2_active_bg.png' %>) no-repeat;
      }
      a {
        color: #727579;
        &.list {
          height: 38px;
          padding-left: 30px;
          width: 70px;
          background: url(<%= asset_path 'list.png' %>) no-repeat 12px 12px;
        }
      }
    }
  }
}

.found em, .overview ol .li-left em {
  background: #ff0;
}

#facets {
  li {
    list-style-type: none;
  }

  .facet {
    width: 238px;
    line-height: 20px;
    font-size: 12px;
    margin: 0px 0 0 1px;
    border-bottom: solid 1px #cdd3d9;

    a.title {
      padding: 19px 0 9px 20px;
      width: 218px;
      color: #333;
      display: block;
      font-size: 16px;
      font-weight: 700;
      cursor: default;
      &:hover {
        text-decoration: none;
      }
    }

    &.open {
      padding-bottom: 10px;
      background-color: #fff;
      background: #f8fafb;
      @include box-shadow-inset(-3px, 3px, 10px, #eee);
    }

    &.collapsed {
      background: url(<%= asset_path 'facet-closed.png' %>) no-repeat;
      height: 47px;
      line-height: 47px;
      padding: 0 0 0 20px;
      width: 218px;

      &:hover {
        background: url(<%= asset_path 'facet-closed-hover.png' %>) no-repeat;
      }

      a.title {
        padding: 0;
        cursor: pointer;

        &:hover {
          text-decoration: none;
        }
      }

      .list {
        display: none;
      }
    }

    .list {
      padding-left: 7px;

      a {
        color: black;
      }

      li {
        padding-left: 30px;
        width: 200px;
        a.add, a.remove {
          color: #f8fafb !important;
          text-decoration: none;
          text-align: center;
          width: 1.5em;
          display: inline-block;
          margin: 0;
          padding: 0;
          margin-left: -35px;
        }
        &.selected {
          font-weight: bold;
        }
        a.remove {
          color: black !important;
          &:hover {
            color: red !important;
          }
        }
        a.add:hover {
          color: gray !important;
        }

        &:hover {
          .add {
            color: lightgray !important;
          }
        }
      }
    }

    input {
      margin-left: 23px;
      margin-bottom: 10px;
      padding: 4px 5px;
      width: 186px;
      @include shaded-input(#ccd2d6);
    }

    &.total_amount {
      form {
        text-align: left !important;
        border-bottom: none !important;
        margin-bottom: 5px;
        margin-top: 5px;
      }
      label {
        float: left;
        margin-left: 23px;
        height: 24px;
        line-height: 24px;
      }
      input {
        width: 119px;
        margin-left: 10px;

        &.search {
          margin: 0 0 0 5px;
          padding: 0;
          width: 35px;
          height: 24px;
          background: url(<%= asset_path('confirm.png') %>) no-repeat center center;
          border: 1px solid #ccd2d6;
          @include border-radius(2px);
          cursor: pointer;
        }
      }
    }
  }

  .reset {
    font-weight: bold;
    margin-top: 10px;
    padding-bottom: 10px;
    padding-left: 15px;
    border-bottom: 1px solid #cdd3d9;

    span {
      text-decoration: none;
      text-align: center;
      width: 1.5em;
      display: inline-block;
      margin: 0 2px;
      padding: 0;
    }
  }
}

.top-right {
  .heuristic {
    font-size: 15px;
    font-weight: bold;
    margin: 6px 0 3px 0;
    em {
      background: #eef2f6;
      padding: 4px 9px;
      @include border-radius(3px);
      margin-left: 5px;
    }
  }
}

#sort {
  position: absolute;
  right: 0;
  top: 0;
}

/* adjustments */
html body.detail .select-panel .select-right {
  width: 340px !important;

  .jqTransformSelectWrapper {
    width: 160px !important;

    div span {
      width: 125px !important;
    }
  }
}

.overview {
  border-top: 1px solid #CDD3D9;
  color: #888888;
  width: 697px;
  padding: 0 0 0 20px;
  margin-bottom: 20px;
  li {
    border-bottom: dashed 1px #ccc;
    padding-top: 15px;
    padding-right: 10px;
    padding-bottom: 5px;
    padding-left: 10px;
    list-style-position: outside;
    position: relative;
    &:hover {
      background-color: #f8fafb;
    }
    &.nobr {
      border: none;
    }
  }
  .li-left {
    float: none;
    width: 510px;
    h2 a {
      font-size: 14px;
      font-weight: 700;
    }
    h2.title {
      display: block;
    }
    .notice {
      margin: 5px 0 20px 0;
      color: #222;
      p {
        margin-bottom: 2px;
      }
    }
  }
  .li-right {
    text-align: right;
    background-color: #f8fafb;
    padding: 5px 10px 5px 10px;
    @include border-radius(5px);
    position: absolute;
    top: 15px;
    right: 0;
    width: 140px;
    .price {
      font-size: 18px;
      font-weight: bold;
      color: #222;
    }
  }
}


.select-panel {
  height: 35px;
  line-height: 30px;
  p {
    float: left;
    margin-bottom: 0px !important;
  }
  .select-right {
    float: right;
    width: 320px;
    .select-right-left {
      float: left;
      width: 250px;
      line-height: 25px;
      margin-top: 2px;
      position: relative;
    }
  }
  .jqTransformSelectWrapper {
    width: 140px !important;
    height: 25px;
    position: absolute;
    top: 0px;
    right: 0px;
    text-shadow: 0px 1px 0px #ffffff;
    filter: dropshadow(color=#ffffff, offx=0, offy=1);
    div span {
      width: 105px !important;
      height: 25px;
      line-height: 25px;
      padding-top: 0px;
      padding-right: 0px;
      padding-bottom: 0px;
      padding-left: 10px;
    }
    a.jqTransformSelectOpen {
      width: 26px;
      height: 25px;
    }
    ul {
      top: 25px;
      a {
        padding-top: 0px;
        padding-bottom: 0px;
      }
    }
  }
}


.nav {
  display: inline-block;
  float: right;
  margin: 2px 0 0 8px;
  a.next {
    display: block;
    float: left;
    width: 40px;
    height: 25px;
    background: url(<%= asset_path 'sort_desc.png' %>) no-repeat;
    &.active {
      background: url(<%= asset_path 'sort_desc_active.png' %>) no-repeat;
    }
  }
  a.prew {
    display: block;
    float: left;
    width: 40px;
    height: 25px;
    background: url(<%= asset_path 'sort_asc.png' %>) no-repeat;
    &.active {
      display: block;
      float: left;
      width: 40px;
      height: 25px;
      background: url(<%= asset_path 'sort_asc_active.png' %>) no-repeat;
    }
  }
}

.paging-panel {
  clear: both;
  height: 30px;
  line-height: 35px;
  border-top: 1px solid #CDD3D9;
  color: #6c6f73;
  margin-bottom: 10px;
  div {
    float: left;
    width: 59%;
  }
  nav.paging {
    height: 20px;
    margin-top: 8px;
    float: right;
    width: 40%;
    text-align: right;
    .pprew {
      background: url(<%= asset_path 'pprew.png' %>) no-repeat;
      display: inline-block;
      height: 20px;
      width: 35px;
    }
    .pnext {
      background: url(<%= asset_path 'pnext.png' %>) no-repeat;
      display: inline-block;
      height: 20px;
      width: 35px;
    }
  }
  .inside-paging {
    position: relative;
    top: -5px;
    padding-right: 5px;
    padding-left: 5px;
  }
}
