@import "mixins";

h1.page-title {
  font-size: 23px;
  margin-top: 24px;
  margin-bottom: 27px;
}

body.detail .dashboard #top {
  background: none;

  .top-right {
    padding: 0;
  }
}

.dashboard {
  #menu {
    @include border-radius(4px);
    background: #eaedef;
    border: 1px solid #ccd2d6;
    float: left;
    width: 210px;
    text-align: left;
    padding: 15px 0 15px 15px;

    h2 {
      background: url(<%= asset_path('squares.png') %>) no-repeat left center;
      padding-left: 22px;
      font-size: 14px;
      margin-bottom: 10px;
    }

    form {
      font-size: 13px;
      line-height: 22px;
      color: #4c4c4c;

      input {
        margin-left: 0;
        vertical-align: middle;
      }
      label {
        margin-left: 6px;
        margin-bottom: 3px;
        cursor: pointer;
        cursor: hand;
      }
    }
  }

  .top-right {
    background: white;
    border: 1px solid #dde1e4;
    @include border-radius(4px);

    .header, .footer {
      height: 57px;
      line-height: 57px;
      vertical-align: middle;
      background-color: #f8fafb;
      padding-left: 25px;
      border: 1px solid #dde1e4;
      overflow: hidden;

      h1 {
        background: url(<%= asset_path('squares.png') %>) no-repeat left center;
        padding-left: 25px;
        font-size: 18px;
        float: left;
      }

      form.per_page {
        float: right;
        margin-right: 15px;
      }
    }

    .header {
      @include border-radius(4px 4px 0px 0px);
    }

    .footer {
      @include border-radius(0px 0px 4px 4px);
    }

    .inner {
      border-left: 1px solid #ccd2d6;
      border-right: 1px solid #ccd2d6;

      h2 {
        margin-bottom: 3px;
        font-size: 14px;
      }

      h3.notice {
        font-size: 14px;
        margin-bottom: 7px;
        cursor: help;
      }

      .price {
        @include border-radius(5px);
        float: right;
        color: #222222;
        background: #f8fafb;
        font-size: 18px;
        font-weight: bold;
        padding: 5px 10px;
        text-align: right;
        width: 140px;
      }

      .controls {
        float: right;
        clear: both;
        margin-top: 10px;
      }
    }
  }
}

.event {
  margin-top: 16px;

  p {
    margin-top: 5px;
  }
}

.event + .event {
  margin-top: 10px;
}

.events-group {
  padding: 20px;
}

.events-group + .events-group {
  border-top: 1px solid #dde1e4;
}

.event-img {
  background-color: #eaedef;
  padding-left: 40px;
  float: left;
  margin-right: 10px;
  background-position: 11px center;
  background-repeat: no-repeat;
}

<% %w(open comment answer watch unwatch registered).each do |type| %>
.event-<%= type %> {
  background-image: url(<%= asset_path("event-#{type}.png") %>);
}
<% end %>

.watched, .unwatched {
  width: 18px;
  height: 9px;
  cursor: pointer;
  text-indent: -9000px;
  text-transorm: capitalize;
}

.watched {
  background: url(<%= asset_path('eye.png') %>) no-repeat scroll 0 0;
  &.with_note {
    width: 24px;
  }
}

.unwatched {
  background: url(<%= asset_path('eye.png') %>) no-repeat scroll 0 -9px;
}

.small_box {
  font-size: 12px;
  font-weight: normal;
  right: -48px;
}
