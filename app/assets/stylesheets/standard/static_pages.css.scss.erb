@import "mixins";

body.static {
  text-align: left;

  #menu {
    width: 240px;
    text-align: left;
    padding-top: 30px;
    float: left;
    li {
      list-style-type: none;
      margin-bottom: 17px;
      width: 214px;
      padding-left: 24px;
      font-size: 16px;
    }
  }

  #top {
    margin-top: 20px;
    border-top: 1px solid #ccd2d6;
    border-bottom: 1px solid #ccd2d6;
    @include border-radius(4px);

    .top-right {
      margin-bottom: 20px;
      min-height: 500px;
      padding-left: 30px;
      padding-right: 40px;
      width: 670px;
      font-size: 14px;

      form {
        width: 80%;
        margin: 0 auto;
        margin-top: 10px;
      }

      label {
        font-size: 16px;
        margin: 0 10px 10px 0;
        padding: 9px 0 0;
        text-align: left;
        width: 135px;
        display: block;
      }

      textarea, input {
        color: #3A3A3A;
        display: block;
        font-family: Georgia,serif;
        font-size: 18px;
        margin: 0 0 10px;
        padding: 4px;
        width: 100%;
      }

      .submit {
        width: 200px;
        float: right;
      }

      .page-edit {
        display: none;
        margin-bottom: 20px;
      }

      .show-page-instructions {
        display: block;
        float: right;
        margin-top: 20px;
      }

      ul {
        margin-top: 18px;
        margin-left: 19px;
        li {
          list-style-image: url(<%= asset_path('list_bullet.png') %>);
          margin-bottom: 10px;
        }
      }

      h1 {
        font-size: 32px;
        font-weight: bold;
        margin-top: 40px;
        margin-bottom: 30px;
      }

      h2 {
        @extend h1;
        font-size: 20px;
        margin-top: 27px;
        margin-bottom: 20px;
      }

      h3 {
        @extend h1;
        font-size: 17px;
        margin-top: 27px;
        margin-bottom: 6px;
      }

      p {
        margin-top: 10px;
        margin-bottom: 10px;
        line-height: 29px;
      }
    }
  }
}
