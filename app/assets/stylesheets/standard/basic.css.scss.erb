@import "mixins";

body {
  background: url(<%= asset_path 'body_bg.png' %>) top repeat-x #dde1e4;
  width: 100%;
  font-family: "Arial";
}

a {
  color: #288ecb;
  outline: none;
  &:link, &:visited {
    color: #288ecb;
    text-decoration: none;
  }
  &:hover, &:active {
    text-decoration: underline;
  }
}

input[type="button"] {
  cursor: pointer;
}

.clear {
  clear: both;
}

.strong {
  font-weight: 700;
}

table {
  border-collapse: collapse;
}

h4.title {
  font-size: 22px;
  font-weight: 700;
  margin: 20px 0 15px 20px;
}

strong {
  font-weight: bold;
}

.heuristic_label {
  background: #eef2f6;
  padding: 3px 9px;
  @include border-radius(3px);
}

a.button {
  color: #fff;
}

.button {
  background: url(<%= asset_path 'buttons.png' %>) repeat-x;
  height: 48px;
  line-height: 48px;
  @include border-radius(2px);
  display: block;
  border: 1px solid #1b6899;
  color: #FFFFFF;
  cursor: pointer;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
  text-shadow: 0 1px 0 #3A79A3;

  &:hover {
    background: url(<%= asset_path 'buttons.png' %>) repeat-x scroll 0 -48px;
    text-decoration: none;
  }

  &:active {
    background: url(<%= asset_path 'buttons.png' %>) repeat-x scroll 0 -96px;
    text-decoration: none;
  }
}
