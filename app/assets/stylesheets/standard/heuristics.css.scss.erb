 body.heuristic{
    background: url(<%= asset_path 'body_detail_bg.png' %>) repeat-x #DDE1E4;

    #content {
     background: transparent;
     padding-top: 27px;
     }
 }

.top-navigation{
    text-align: left;
    padding: 10px;
}

table.admin_table {
    border-top: solid 0px;
	border-collapse: collapse;
	margin-top: 6px;
	margin-left: 12px;
	font-size: 12px;
	text-align: left;
    width: 600px;

    thead {
	    font-weight: 700;
	    padding: 10px 8px;
	    border-bottom: 2px solid #cbd0d4;
    }
    tbody tr {
	    height: 30px;
	    line-height: 30px;
	    order-top: solid 1px #cbd0d4;
	    border-bottom: 1px dashed #cbd0d4;
    }
    td {
  	    padding: 9px 8px 0px 8px;
        width: 230px;
     }
    td.explanation {
        width: 550px;
    }
    td.points {
       width: 40px;
    }
    td.cross {
       width: 40px;
    }
    tbody tr:hover td
    {
	    color: green;
    }
}

#heuristic_form {
  margin-bottom: 1em;

  p {
    display: block;
    width: 100%;
  }

  input, textarea {
    width: 50%;
  }

  input[type=submit] {
    width: 150px;
  }
}
