<div class="event">
  <%= image_tag gravatar_url(event.comment.user), size: '60x60', alt: current_user.name, class: 'event-img event-comment' %>

  <strong><%= link_to_comment(event.comment.author_label, event.comment) %> pridal komentár ku zmluve</strong>
  <p><em><% if event.comment.censored? %>Komentár bol medzičasom odstránený moderátorom.<% else %>"<%= truncate(event.comment.comment, length: 80) %>"<% end %></em></p>
  <% # MAKE SURE you call updated_at - it's updated when you open document during a session %>
  <p><em><%= time_ago_in_words(event.updated_at) %></em></p>

  <div class="clear"></div>
</div>
