<div style="clear: both;"></div>
<div id="content" class="login">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label :email, 'Email' %>
    <%= f.email_field :email %></p>

    <p><%= f.label :name, 'Meno' %>
    <%= f.text_field :name %></p>

    <p><%= f.label :password, 'Heslo' %>
    <%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, 'Potvrdenie hesla' %>
    <%= f.password_field :password_confirmation %></p>

    <div class="indent captcha">
      <%= recaptcha_tags %>
    </div>

    <p class="indent tos">
      <%= f.check_box :terms_of_service %>
      <%= f.label :terms_of_service, "Prečítal som si a akceptujem #{link_to 'podmienky používania portálu', static_page_path('podmienky-pouzivania')}".html_safe %>
    </p>

    <p class="indent">
      <%= f.submit "Zaregistruj" %>
    </p>
  <% end %>
</div>
